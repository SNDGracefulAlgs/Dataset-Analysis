<Window x:Class="Dataset_Analysis.BoolemisationWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dataset_Analysis"
        mc:Ignorable="d"
        Title="boolemisationWnd" Height="443.058" Width="300" Closing="Window_Closing">
    <StackPanel x:Name="stackPanel">
        <TextBox x:Name="filePathTextBox" Margin="5" Height="90" TextWrapping="Wrap" Text="TextBox" Background="#FFC5E6E8"/>
        <Button x:Name="transformButton"  Margin="5" Content="Transfer samples to boolean representation " Click="transformButton_Click"/>
        <TextBlock x:Name="statusTextBlock"  Margin="5" TextWrapping="Wrap" Text="Input file path and press the button." Height="55" Background="#FFDDDDDD"/>

    </StackPanel>

</Window>
